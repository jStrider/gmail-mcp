{
  "name": "mcp-gmail-server",
  "version": "0.1.0",
  "description": "A Model Context Protocol server for Gmail integration",
  "author": "Julien Renaud",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/mcp-gmail-server.git"
  },
  "keywords": [
    "mcp",
    "gmail",
    "email",
    "claude",
    "ai"
  ],
  "private": true,
  "type": "module",
  "bin": {
    "gmail-server": "./build/index.js"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "build": "tsc && node -e \"require('fs').chmodSync('build/index.js', '755')\"",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "inspector": "npx @modelcontextprotocol/inspector build/index.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "0.6.0",
    "googleapis": "^152.0.0",
    "puppeteer-core": "^24.12.1"
  },
  "devDependencies": {
    "@types/node": "^20.19.7",
    "typescript": "^5.8.3"
  }
}
